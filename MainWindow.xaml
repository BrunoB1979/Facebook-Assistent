<Window x:Class="Facebook_Assistent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Facebook-Assistent v1.0" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#F0F2F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Margin="10" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="⚙️ Einstellungen">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="App ID:"/>
                    <TextBox x:Name="txtAppId" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Page ID:"/>
                    <TextBox x:Name="txtPageId" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Access Token:"/>
                    <TextBox x:Name="txtAccessToken" Grid.Row="2" Grid.Column="1" Margin="0,5" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                        <Button x:Name="btnTestConnection" Content="Verbindung testen" Width="150" Click="BtnTestConnection_Click"/>
                        <Button x:Name="btnSaveSettings" Content="Speichern" Width="120" FontWeight="Bold" Click="BtnSaveSettings_Click"/>
                    </StackPanel>

                    <TextBlock Grid.Row="4" Grid.Column="1" Foreground="Blue" TextDecorations="Underline" Cursor="Hand" Margin="5,10">
                        Wie erhalte ich diese Daten? (Hilfe öffnen)
                    </TextBlock>
                </Grid>
            </TabItem>

            <TabItem x:Name="tabEditor" Header="✏️ Post-Editor">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="Beitragstext (Erste Zeile wird Headline):"/>

                        <TextBox x:Name="txtPostContent" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,5" TextChanged="TxtPostContent_TextChanged" VerticalAlignment="Top"/>

                        <Border Grid.Row="2" BorderBrush="#DDDDDD" BorderThickness="1" Background="#F5F5F5" Margin="0,10,0,5" HorizontalAlignment="Left">
                            <Image x:Name="imgEditorPreview" Width="200" Height="200" Stretch="Uniform"/>
                        </Border>

                        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,5,0,10">
                            <Label Content="Bildquelle auswählen:" Padding="0,5"/>
                            <DockPanel>
                                <Button x:Name="btnSelectImage" Content="Datei wählen..." Width="100" DockPanel.Dock="Right" Margin="5,0,0,0" 
        Click="BtnSelectImage_Click"/>
                                <TextBox x:Name="txtImagePath" IsReadOnly="True" Background="#EEEEEE" Text="Kein Bild ausgewählt." VerticalContentAlignment="Center"/>
                            </DockPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="btnClearEditor" Content="Neu / Leeren" 
        Click="BtnClearEditor_Click"/>
                            <Button x:Name="btnSavePost" Content="Als Entwurf speichern" FontWeight="Bold" Background="#DDDDDD" 
        Click="BtnSavePost_Click" 
        IsEnabled="False"/>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="White" Padding="15">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Label Content="Vorschau (So könnte es aussehen):" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="40" Height="40" Fill="#1877F2"/>
                                    <StackPanel Margin="10,0">
                                        <TextBlock Text="Deine Seite" FontWeight="Bold"/>
                                        <TextBlock Text="Gerade eben · 🌎" Foreground="Gray" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock x:Name="lblPreviewHeadline" Text="Headline..." FontWeight="Bold" FontSize="16" Margin="0,5" TextWrapping="Wrap"/>
                                <TextBlock x:Name="lblPreviewText" Text="Hier erscheint dein Text..." TextWrapping="Wrap" Margin="0,0,0,10"/>

                                <Image x:Name="imgPreview" MaxHeight="400" Stretch="Uniform" HorizontalAlignment="Center" />
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem x:Name="tabManagement" Header="📋 Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                        <Label Content="Anzeige filtern:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <ComboBox x:Name="cmbFilter" Width="200" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="CmbFilter_SelectionChanged">
                            <ComboBoxItem Content="Alle Beiträge anzeigen"/>
                            <ComboBoxItem Content="Nur Entwürfe (Status 0)"/>
                            <ComboBoxItem Content="Nur Veröffentlichte (Status 1)"/>
                        </ComboBox>

                        <Button x:Name="btnRefreshList" Content="🔄 Aktualisieren" Margin="20,0,0,0" Click="BtnRefreshList_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="gridPosts" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="80"/>
                            <DataGridTextColumn Header="Headline" Binding="{Binding Headline}" Width="*"/>
                            <DataGridTextColumn Header="Erstellt am" Binding="{Binding CreatedDate}" Width="120"/>
                            <DataGridTextColumn Header="FB ID" Binding="{Binding FacebookPostId}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" Background="#EEEEEE" Padding="10" Margin="0,10,0,0" CornerRadius="5">
                        <DockPanel LastChildFill="False">
                            <Button x:Name="btnDeletePost" Content="🗑️ Löschen" Foreground="Red" DockPanel.Dock="Left" Click="BtnDeletePost_Click"/>

                            <Button x:Name="btnPublishNow" Content="🚀 Jetzt Veröffentlichen" FontWeight="Bold" Background="#1877F2" Foreground="White" DockPanel.Dock="Right" Click="btnPublishNow_Click"/>
                            <Button x:Name="btnEditPost" Content="✏️ Bearbeiten" DockPanel.Dock="Right" Click="BtnEditPost_Click"/>
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem x:Name="tabStats" Header="📊 Statistik">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <WrapPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Border Background="#E7F3FF" Width="190" Padding="12" CornerRadius="10" Margin="6">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Total Likes" FontSize="13" Foreground="Gray"/>
                                <TextBlock x:Name="lblTotalLikes" Text="0" FontSize="28" FontWeight="Bold" Foreground="#1877F2"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E7F3FF" Width="190" Padding="12" CornerRadius="10" Margin="6">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Total Kommentare" FontSize="13" Foreground="Gray"/>
                                <TextBlock x:Name="lblTotalComments" Text="0" FontSize="28" FontWeight="Bold" Foreground="#1877F2"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E7F3FF" Width="190" Padding="12" CornerRadius="10" Margin="6">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Total Geteilt" FontSize="13" Foreground="Gray"/>
                                <TextBlock x:Name="lblTotalShares" Text="0" FontSize="28" FontWeight="Bold" Foreground="#1877F2"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E7F3FF" Width="190" Padding="12" CornerRadius="10" Margin="6">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Interaktionen gesamt" FontSize="13" Foreground="Gray"/>
                                <TextBlock x:Name="lblTotalInteractions" Text="0" FontSize="28" FontWeight="Bold" Foreground="#1877F2"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#F4F8E9" Width="190" Padding="12" CornerRadius="10" Margin="6">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Veröffentlichte Posts" FontSize="13" Foreground="Gray"/>
                                <TextBlock x:Name="lblPublishedPosts" Text="0" FontSize="28" FontWeight="Bold" Foreground="#2E7D32"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFF7E8" Width="190" Padding="12" CornerRadius="10" Margin="6">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Entwürfe" FontSize="13" Foreground="Gray"/>
                                <TextBlock x:Name="lblDraftPosts" Text="0" FontSize="28" FontWeight="Bold" Foreground="#EF6C00"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#F3E8FF" Width="190" Padding="12" CornerRadius="10" Margin="6">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Ø Interaktionen / Post" FontSize="13" Foreground="Gray"/>
                                <TextBlock x:Name="lblAvgInteractions" Text="0" FontSize="28" FontWeight="Bold" Foreground="#7B1FA2"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E8F6FF" Width="260" Padding="12" CornerRadius="10" Margin="6">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Top-Beitrag (nach Score)" FontSize="13" Foreground="Gray"/>
                                <TextBlock x:Name="lblTopPostHeadline" Text="-" FontSize="14" FontWeight="Bold" Foreground="#0D47A1" TextAlignment="Center" TextWrapping="Wrap"/>
                                <TextBlock x:Name="lblTopPostScore" Text="Score: 0" FontSize="13" Foreground="#0D47A1"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <Border Grid.Row="1" Background="#F9FAFC" BorderBrush="#DDE3EA" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="6,0">
                                <TextBlock Text="Letzte 7 Tage" FontWeight="Bold"/>
                                <TextBlock x:Name="lblLast7Days" Text="Noch keine Daten" Foreground="#37474F"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="Letzte 30 Tage" FontWeight="Bold"/>
                                <TextBlock x:Name="lblLast30Days" Text="Noch keine Daten" Foreground="#37474F"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0">
                                <TextBlock Text="Datenqualität" FontWeight="Bold"/>
                                <TextBlock x:Name="lblDataQuality" Text="Noch keine Daten" Foreground="#37474F"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <DataGrid x:Name="gridStats" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Rank}" Width="45"/>
                            <DataGridTextColumn Header="Headline" Binding="{Binding Headline}" Width="*"/>
                            <DataGridTextColumn Header="Veröffentlicht" Binding="{Binding PublishedDisplay}" Width="125"/>
                            <DataGridTextColumn Header="Likes" Binding="{Binding Likes}" Width="70"/>
                            <DataGridTextColumn Header="Kommentare" Binding="{Binding Comments}" Width="90"/>
                            <DataGridTextColumn Header="Shares" Binding="{Binding Shares}" Width="70"/>
                            <DataGridTextColumn Header="Interaktionen" Binding="{Binding Interactions}" Width="95"/>
                            <DataGridTextColumn Header="Score" Binding="{Binding EngagementScore}" Width="80"/>
                            <DataGridTextColumn Header="Interaktionen/Tag" Binding="{Binding InteractionsPerDay}" Width="120"/>
                            <DataGridTextColumn Header="Tage online" Binding="{Binding DaysOnline}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DockPanel Grid.Row="3" Margin="0,10,0,0" LastChildFill="False">
                        <Button x:Name="btnLoadComments" Content="💬 Kommentare laden" Height="40" DockPanel.Dock="Right" Click="BtnLoadComments_Click"/>
                        <Button x:Name="btnRefreshStats" Content="🔄 Live-Daten von Facebook abrufen" Height="40" DockPanel.Dock="Right" Click="btnRefreshStats_Click"/>
                    </DockPanel>
                </Grid>
            </TabItem>

            <TabItem x:Name="tabComments" Header="💬 Kommentare">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock x:Name="lblCommentsTitle" Text="Noch kein Beitrag ausgewählt" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="lblCommentsCount" Text="0 Kommentare" Foreground="Gray"/>
                    </StackPanel>

                    <DataGrid x:Name="gridComments" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="45"/>
                            <DataGridTextColumn Header="Autor" Binding="{Binding Author}" Width="180"/>
                            <DataGridTextColumn Header="Zeitpunkt" Binding="{Binding CreatedDisplay}" Width="140"/>
                            <DataGridTextColumn Header="Kommentar" Binding="{Binding Message}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>

        <StatusBar Grid.Row="1" Background="#DDDDDD">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Bereit." FontWeight="SemiBold"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
